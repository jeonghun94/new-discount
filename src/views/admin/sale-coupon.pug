extends ../admin-base
block content 
        section.admin__section
            article.admin__search-container
                .search__content
                    span 조회일자
                    input(type="text") 
                    span ~
                    input(type="text") 
                .search__content
                    .radio__container   
                        input(type="radio" id="all")
                        label(for="all") 전체
                        input(type="radio" id="shop")
                        label(for="shop") 매장별
                        input(type="radio" id="type")
                        label(for="type") 종류
                    .search__container
                        select
                            option 1시간
                            option 2시간
                    .btn__container
                        .main-btn 조회
                        .sub-btn 업로드
            article.admin__main-container                        
                .main__content-left 
                    table.history__table
                        thead   
                            tr 
                                th 매장명
                                th 할인권종류
                                th 등록개수
                                th 등록일시
                        tbody   
                            tr  
                                td 정훈
                                td ee 
                                td ee 
                                td ee 
                .main__content-right
                    .main__content-right-title 할인권 등록
                    .main__content-right-content 
                        .content__item 
                            span 매장명
                            select 
                                option 랄라라라
                                option 라라라랑
                        .content__item 
                            span 할인권
                            select 
                                option 1시간
                                option 2시간
                        .content__item 
                            span 수량
                            input(type="text" placeholder="0")
                    .main__content-right__footer
                        .sub-btn 등록
            include ../partials/footer